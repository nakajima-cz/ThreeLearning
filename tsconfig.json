{
  "compilerOptions": {
    "sourceMap": true,
    "target": "es5",
    "module": "es2015",
    "moduleResolution": "node",  // node_modules からライブラリを読み込む
    "allowSyntheticDefaultImports": true,
    "typeRoots": [
      "node_modules/@types",
      "types"
    ],
    "lib": [
      "dom",
      "es2018"
    ]
  },
  "include": [
    "src/**/*",
    "types/**/*"
  ]
}